        .badge.difficulty { background-color: var(--secondary-color); }
        .badge.duration { background-color: #555; }
        
        .card-meta {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }
        
        /* Pagination */
        #pagination {
            display: flex;
